<Page x:Class="GitGUI.Pages.ShowDiff"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:GitGUI.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ShowDiff">

    <Grid Background="White" Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header with filename -->
        <TextBlock x:Name="FileNameTextBlock"
                   FontSize="16"
                   FontWeight="Bold"
                   Margin="5"
                   Grid.Row="0"
                   Text="Comparing File: example.txt" />

        <!-- Reusable Diff Viewer -->
        <GroupBox Header="File Diff" Grid.Row="1" Margin="5">
            <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Old Version -->
                    <StackPanel Grid.Column="0" Margin="5">
                        <TextBlock Text="Before" FontWeight="Bold"/>
                        <ItemsControl x:Name="OldFileLines"/>
                    </StackPanel>

                    <!-- Separator -->
                    <Border Grid.Column="1" Background="Gray" Width="1"/>

                    <!-- New Version -->
                    <StackPanel Grid.Column="2" Margin="5">
                        <TextBlock Text="After" FontWeight="Bold"/>
                        <ItemsControl x:Name="NewFileLines"/>
                    </StackPanel>
                </Grid>
            </ScrollViewer>
        </GroupBox>
    </Grid>
</Page>
