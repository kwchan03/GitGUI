<Page x:Class="GitGUI.Pages.OperationPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:GitGUI.Pages"
      mc:Ignorable="d" d:DesignWidth="800"
      Title="Operation"
      Width="Auto"
      VerticalAlignment="Stretch"
      HorizontalAlignment="Stretch">

    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="150"/>
        </Grid.RowDefinitions>

        <GroupBox Grid.Row="0" Header="Repository" Margin="0,0,0,10">
            <StackPanel Orientation="Vertical" Margin="10">
                <!-- Row 1: Local Repo -->
                <DockPanel LastChildFill="True" VerticalAlignment="Top">
                    <Label Content="Path:" DockPanel.Dock="Left" VerticalAlignment="Center"/>
                    <Button Content="Create"
                        Command="{Binding CreateRepoCommand}"
                        Margin="5,0,0,0"
                        MinWidth="75"
                        VerticalAlignment="Center"
                        DockPanel.Dock="Right"/>
                    <Button Content="Open"
                        Command="{Binding OpenRepoCommand}"
                        MinWidth="75"
                        VerticalAlignment="Center"
                        DockPanel.Dock="Right"/>
                    <Button Content="Browse…"
                        Command="{Binding BrowseFolderCommand}"
                        MinWidth="75"
                        Margin="5,0"
                        VerticalAlignment="Center"
                        DockPanel.Dock="Right"/>
                    <TextBox Text="{Binding RepoPath}"
                        Margin="5,0"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Stretch"/>
                </DockPanel>

                <!-- Row 2: Clone Repo -->
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <Label 
                        Grid.Column="0" 
                        Content="Source URL:" 
                        VerticalAlignment="Center"/>
                    <TextBox 
                        Grid.Column="1" 
                        Text="{Binding SourceUrl}" 
                        Margin="5,0" 
                        VerticalAlignment="Center"/>
                    <Label 
                        Grid.Column="2" 
                        Content="Target Path:" 
                        VerticalAlignment="Center" 
                        Margin="10,0,0,0"/>
                    <TextBox 
                        Grid.Column="3" 
                        Text="{Binding CloneTargetPath}" 
                        Margin="5,0" 
                        VerticalAlignment="Center"/>
                    <Button 
                        Grid.Column="5" 
                        Content="Clone" 
                        Command="{Binding CloneRepoCommand}" 
                        MinWidth="75" 
                        Margin="10,0,0,0" 
                        VerticalAlignment="Center"/>
                </Grid>

            </StackPanel>
        </GroupBox>



        <!-- Main Content -->
        <Grid Grid.Row="1" Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="2.5*"/>
            </Grid.ColumnDefinitions>

            <!-- Commit Graph Panel -->
            <GroupBox Header="Commit Graph" Grid.Column="0" Margin="5">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <ItemsControl x:Name="CommitGraphList">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal" Margin="5">
                                    <Ellipse Width="10" Height="10" Fill="DarkBlue" Margin="5"/>
                                    <StackPanel>
                                        <TextBlock Text="{Binding Message}" FontWeight="Bold"/>
                                        <TextBlock Text="{Binding Hash}" FontSize="10" Foreground="Gray"/>
                                        <TextBlock Text="{Binding Date}" FontSize="10" Foreground="DarkGray"/>
                                    </StackPanel>
                                </StackPanel>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </GroupBox>

            <!-- File Changes Panel -->
            <GroupBox Header="Changes" Grid.Column="1" Margin="5">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <ListBox x:Name="ChangesListBox" Grid.Row="0"/>

                    <WrapPanel Grid.Row="1" Margin="5" HorizontalAlignment="Center">
                        <Button Content="Stage" Width="75" Margin="5"/>
                        <Button Content="Unstage" Width="75" Margin="5"/>
                        <Button Content="Show" Width="75" Margin="5"/>
                    </WrapPanel>
                </Grid>
            </GroupBox>

            <!-- Commit & Branch Panel -->
            <GroupBox Header="Commit &amp; Branch" Grid.Column="2" Margin="5">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel Margin="10">
                        <TextBlock Text="Commit Message:"/>
                        <TextBox x:Name="CommitMessageBox" AcceptsReturn="True" Height="60" Margin="0,5"/>
                        <Button Content="Commit" Width="100" Margin="0,5,0,10"/>

                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,5">
                            <TextBlock Text="Current Branch:" VerticalAlignment="Center"/>
                            <TextBlock Text="{Binding CurrentBranch}"
                                FontWeight="Bold"
                                Margin="5,0"
                                Width="135"
                                VerticalAlignment="Center"/>
                        </StackPanel>
                        <ComboBox x:Name="BranchComboBox"
                            ItemsSource="{Binding Branches}"
                            SelectedItem="{Binding SelectedBranch}"
                            DisplayMemberPath="Name"
                            Margin="0,5"/>
                        <WrapPanel HorizontalAlignment="Center">
                            <Button Content="Checkout"
                                Command="{Binding CheckoutBranchCommand}"
                                Width="100"
                                Margin="5"/>
                            <Button Content="Merge"
                                Command="{Binding MergeBranchCommand}"
                                Width="100"
                                Margin="5"/>
                        </WrapPanel>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <!-- TextBox takes all available space -->
                                <ColumnDefinition Width="*"/>
                                <!-- Button is auto-sized -->
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <TextBox Grid.Column="0"
                                Text="{Binding NewBranchName, UpdateSourceTrigger=PropertyChanged}"
                                Margin="5"
                                HorizontalAlignment="Stretch"
                                VerticalAlignment="Center"/>

                            <Button Grid.Column="1"
                                Content="New Branch"
                                Command="{Binding CreateBranchCommand}"
                                Width="75"
                                Margin="5"
                                VerticalAlignment="Center"/>
                        </Grid>

                        <WrapPanel HorizontalAlignment="Center">
                            <Button Content="Push" Width="100" Margin="5"/>
                            <Button Content="Pull" Width="100" Margin="5"/>
                        </WrapPanel>
                    </StackPanel>
                </ScrollViewer>
            </GroupBox>
        </Grid>

        <!-- Output Log -->
        <GroupBox Header="Output Log" Grid.Row="2" Grid.ColumnSpan="2">
            <TextBox x:Name="OutputTextBox"
             IsReadOnly="True"
             Text="{Binding OutputLog, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}"
             TextWrapping="Wrap"
             VerticalScrollBarVisibility="Auto"
             HorizontalScrollBarVisibility="Auto"
             FontFamily="Consolas"
             Background="Black"
             Foreground="LightGreen"
             Height="Auto"/>
        </GroupBox>
    </Grid>
</Page>
