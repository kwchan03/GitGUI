<Page x:Class="GitGUI.Pages.PullRequestPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PullRequestPage">

    <Grid Background="White" Margin="8">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="180"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Left: Pull-request list -->
        <GroupBox Header="Open Pull Requests" Grid.Column="0">
            <DockPanel>
                <ToolBar DockPanel.Dock="Top">
                    <Button Content="Refresh" Width="60"/>
                    <Separator/>
                    <Button Content="New PR" Width="60"/>
                </ToolBar>

                <ListView BorderThickness="0" Margin="2">
                    <ListViewItem>
                        <StackPanel Margin="4">
                            <TextBlock Text="Fix login validation" FontWeight="SemiBold"/>
                            <TextBlock FontSize="11" Foreground="Gray" Text="#42 • kaiwen • 1 day ago"/>
                            <TextBlock FontSize="11" Foreground="Green" Text="Open"/>
                        </StackPanel>
                    </ListViewItem>
                    <ListViewItem>
                        <StackPanel Margin="4">
                            <TextBlock Text="Update test plan logic" FontWeight="SemiBold"/>
                            <TextBlock FontSize="11" Foreground="Gray" Text="#41 • Ali • 2 days ago"/>
                            <TextBlock FontSize="11" Foreground="Gray" Text="Merged"/>
                        </StackPanel>
                    </ListViewItem>
                </ListView>
            </DockPanel>
        </GroupBox>

        <!-- Right: PR details -->
        <GroupBox Header="Details" Grid.Column="1">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <StackPanel Grid.Row="0">
                    <TextBlock Text="Fix login validation" FontSize="16" FontWeight="Bold" Margin="5,0"/>
                    <TextBlock Text="PR#42 by Kaiwen" TextWrapping="Wrap"/>
                    <TextBlock Text="Created: 2024-06-01" FontSize="10" Foreground="Gray"/>
                </StackPanel>

                <!-- Tabs -->
                <TabControl Grid.Row="2" Margin="0,4,0,4">
                    <TabItem Header="Description">
                        <ScrollViewer>
                            <TextBlock Text="This PR resolves an issue where invalid login states weren't handled correctly..." TextWrapping="Wrap" Padding="8"/>
                        </ScrollViewer>
                    </TabItem>

                    <!-- Changed Files -->
                    <TabItem Header="Changed Files">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="180"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <GroupBox Header="Files" Grid.Column="0" Margin="0,0,6,0">
                                <ListBox>
                                    <ListBoxItem Content="TestPlan.xml"/>
                                    <ListBoxItem Content="StepSettings.config"/>
                                </ListBox>
                            </GroupBox>

                            <GroupBox Header="Diff" Grid.Column="1">
                                <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="4"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>

                                        <!-- OLD version -->
                                        <StackPanel Grid.Column="0" Margin="6">
                                            <TextBlock Text="Before" FontWeight="Bold" Margin="0,0,0,4"/>
                                            <Border Background="LightGray" Padding="4" Margin="0,0,0,2">
                                                <TextBlock Text="Step: ValidateUser" />
                                            </Border>
                                            <Border Background="Yellow" Padding="4" Margin="0,0,0,2">
                                                <TextBlock Text="Timeout: 5s" />
                                            </Border>
                                            <Border Background="LightCoral" Padding="4" Margin="0,0,0,2">
                                                <TextBlock Text="Retries: 2" />
                                            </Border>
                                            <Border Background="Yellow" Padding="4" Margin="0,0,0,2">
                                                <TextBlock Text="Verdict: Not Set" />
                                            </Border>
                                        </StackPanel>

                                        <!-- Separator -->
                                        <Border Grid.Column="1" Background="Gray" Width="1"/>

                                        <!-- NEW version -->
                                        <StackPanel Grid.Column="2" Margin="6">
                                            <TextBlock Text="After" FontWeight="Bold" Margin="0,0,0,4"/>
                                            <Border Background="LightGray" Padding="4" Margin="0,0,0,2">
                                                <TextBlock Text="Step: ValidateUser" />
                                            </Border>
                                            <Border Background="Yellow" Padding="4" Margin="0,0,0,2">
                                                <TextBlock Text="Timeout: 10s" />
                                            </Border>
                                            <Border Background="Yellow" Padding="4" Margin="0,0,0,2">
                                                <TextBlock Text="Verdict: Pass if Yes" />
                                            </Border>
                                            <Border Background="LightGreen" Padding="4" Margin="0,0,0,2">
                                                <TextBlock Text="LogLevel: Debug" />
                                            </Border>
                                        </StackPanel>
                                    </Grid>
                                </ScrollViewer>
                            </GroupBox>

                        </Grid>
                    </TabItem>
                </TabControl>

                <!-- Action Buttons -->
                <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,6">
                    <Button Content="Approve" Margin="4" Width="90"/>
                    <Button Content="Request Changes" Margin="4" Width="120"/>
                    <Button Content="Comment" Margin="4" Width="90"/>
                    <Button Content="Merge" Margin="4" Width="90"/>
                </StackPanel>
            </Grid>
        </GroupBox>
    </Grid>
</Page>
